@model IEnumerable<FinalG3FoodOrderingSystem.Models.Food>

@{
    ViewBag.Title = "Food Menu";
}

<h2>All Food Details</h2>

<p>
    @Html.ActionLink("Add New Food", "Create", "Foods")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FoodName)
        </th>
     
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.FoodName)
            </td>
          
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, null) |
            </td>
        </tr>
    }

</table>
