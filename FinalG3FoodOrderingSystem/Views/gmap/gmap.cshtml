<style>
    /* Always set the map height explicitly to define the size of the div
       * element that contains the map. */
    #map {
        height: 400px;
        width: 400px;
    }
    /* Optional: Makes the sample page fill the window. */
    html, body {
        height: 100%;
        margin: 0;
        padding: 0;
    }
</style>
<br />

<div class="row">
    <div id="map"></div>
    <script>
        var map;
        var marker;
        var infowindow;

        function initMap() {
            map = new google.maps.Map(document.getElementById('map'), {
                center: { lat: 1.860316, lng: 103.086506 },
                zoom: 14
            });

            marker = new google.maps.Marker({
                position: { lat: 1.860316, lng: 103.086506 },
                map: map,
                title: 'Hello World!'
            });
            }


    </script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDKA0gTCLOXXWc83Z-9mzwXXj8vep5PV5s&callback=initMap"
            async defer></script>
</div>
