@model FinalG3FoodOrderingSystem.Models.Feedback

@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h2 align="center">Thank You for Using G3Food Ordering System !! </h2><br>
    <h4 align="center"><br><br> Would You like to give us some feedback ?<h4>
    <h4 align="center">Feel free to fill up the form below<br> Your identity is kept confidential</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(model => model.ShopId, "ShopId", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("ShopId", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ShopId, "", new { @class = "text-danger" })
        </div>
    </div>
    <h4>Instruction : Please rate our service </h4>
    <div class="form-group">

        <div class="col-md-10">
            <br> &emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;
            @Html.RadioButtonFor(model => model.rating, "5")
            Excellent <br> &emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;
            @Html.RadioButtonFor(model => model.rating, "4")
            Good <br>
            @Html.LabelFor(model => model.rating, htmlAttributes: new { @class = "control-label col-md-2" })
            &emsp;&emsp;&emsp;&emsp;
            @Html.RadioButtonFor(model => model.rating, "3")
            Moderate<br>&emsp;&emsp;&emsp;&emsp;
            @Html.RadioButtonFor(model => model.rating, "2")
            Poor <br> &emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;
            @Html.RadioButtonFor(model => model.rating, "1")
            Very Poor<br><br>
        </div>
    </div>


    <div class="form-group">
        @Html.LabelFor(model => model.message, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextAreaFor(model => Model.message, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.message, "", new { @class = "text-danger" })
        </div>
    </div>



    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
